<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="navbar-fixed-top">
<header id="header" style="background-color:#EFEFEF">
  <div class="container-fluid">
		<div class="row">

			<div class="col-md-3 " style="padding:40px 20px 40px 20px">
    		<a href="/admin" class="logo">
        	<img class="img-responsive center-block" src="/assets/app/logo.png" alt="Logo" width="100%">
				</a>
			</div>

			<div class="col-md-7">
  		  <img src="/assets/app/shape.jpg" alt="Logo" width="100%">
			</div>	

			<div class="col-md-2" style="padding:120px 10px 10px 0px ">
				<div class="text-muted" style="padding:10 0 10 0">
				Welcome ADMIN
			</div>	
	</div>
</header>
<div class="container" style="background-color:White">
  <nav class="navbar navbar-default ">
    <div class="container-fluid">
      <div id="navbar">
       <ul class="nav navbar-nav">
          <li><a href="/admin">Home</a></li>
          <li>						
						<%= link_to 'Create New Article', new_admin_article_path()%>		
					</li>
          <li><%= link_to 'All Articles', admin_articles_path %></li>
          <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">List Articles Categorywise<span class="caret"></span></a>
           <ul class="dropdown-menu">
            <li><%= link_to 'Fictional', fictional_admin_categories_path %></li>
            <li><%= link_to 'Political', political_admin_categories_path %></li>
            <li><%= link_to 'Social', social_admin_categories_path %></li>   
            <li><%= link_to 'Technical', technical_admin_categories_path %></li>
            <li><%= link_to 'Factual', factual_admin_categories_path %></li>
            <li><%= link_to 'Commercial', commercial_admin_categories_path %></li>        
           </ul>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
  </nav>
</div>
</div>
<%= yield %>

<footer id="footer" style="background-color:#EFEFEF">
	<div class="container-fluid">
		<div class="row" style="background: url('/assets/app/repeat.png')">
			<a href="http://guides.rubyonrails.org/">
			<div class="col-md-1" style="padding:10px 0px 10px 10px">  		  
				<img src="/assets/app/logo_rails.png" alt="Logo" height="90px">
			</div>
	
			<div class="col-md-1" style="padding:10px 0px 0px 0px">
  		  <h3 style="color:#AB0036 ;font-family:'Georgia'"><strong>Project 2015</strong></h3>
			</div>
			</a>

      <div class="col-md-8">
				<div class="row" style="padding:30px 20px 30px 20px">
					<div class="col-md-2">
						<%= link_to 'About', about_admin_welcome_index_path ,class:'article_head'%>
					</div>
					<div class="col-md-3">
						<%= link_to 'Content Policy', content_admin_welcome_index_path ,class:'article_head'%>
					</div>
					<div class="col-md-4">
						<%= link_to 'Terms & Conditions', terms_admin_welcome_index_path ,class:'article_head'%>						
					</div>
					<div class="col-md-3">
						<%= link_to 'Contact us', contact_admin_welcome_index_path ,class:'article_head'%>
					</div>
				</div>			
			</div>
      
			<div class="col-md-2 " style="padding:0px">
  		  <img src="/assets/app/header.jpg" alt="Logo" height="110px" width="100%">
			</div>

		</div>
		<div class="row">
			<p class="copy">&copy Copyright 2015 LetsBlog. All Rights Reserved</p>
		</div>
	</div>
</footer>

</body>
</html>
